@pre |a| >= 0 && 0 <= l && u < |a|
@post rv <-> exists ix. (l <= ix && ix <= u && a[ix] = e)
# (|a| + 2)
bool LinearSearch(int[] a, int l, int u, int e) {
	for
		# (|a|)
		@ L1: |a| >= 0 && l <= i && 0 <= l && u < |a| && (i <= u + 1 || i <= l)
		  && forall ix. (l <= ix && ix < i -> a[ix] != e)
		(int i := l; i <= u; i := i + 1)
	{
		if (a[i] = e)
			return true;
	}
	return false;
}
